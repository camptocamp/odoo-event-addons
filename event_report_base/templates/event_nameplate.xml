<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <template id="nameplate_info" name="Event nameplate info">
    <h1>
      <span t-field="o.name" />
    </h1>
    <t t-if="o_company">
      <h2 class="company">
        <span t-field="o_company.name" />
      </h2>
    </t>
  </template>

  <template id="event_nameplate" name="Event nameplate">
    <t t-call="web.basic_layout">
      <t t-foreach="pages" t-as="page">
        <div t-attf-class="page nameplates #{'debug' if debub else ''}">
          <!-- put 2 nameplates on a single page -->
          <t t-foreach="page" t-as="o">
            <t t-set="o_company" t-value="o.partner_id" />
            <div t-attf-class="nameplate #{'even' if o_even else 'odd'}">
              <div class="text-center flipped">
                <t t-call="event_report_base.nameplate_info" />
              </div>
              <div class="text-center vertical-mirror">
                <t t-call="event_report_base.nameplate_info" />
              </div>
            </div>
          </t>
        </div>
      </t>
    </t>
  </template>

</odoo>
