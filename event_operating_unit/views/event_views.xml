<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_event_form_inherit_ou">
        <field name="name">event.event.form</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="operating_unit_id" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_event_tree_inherit_ou">
        <field name="name">event.event.tree</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_tree" />
        <field name="arch" type="xml">
            <tree>
                <field name="operating_unit_id" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_event_search">
        <field name="name">event.event.search</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_search" />
        <field name="arch" type="xml">
            <search>
                <field name="operating_unit_id" string="Operating Unit" />
<!--                  <filter name="my_ou" string="My Operating Unit" domain="[('operating_unit_id', 'in', user.operating_unit_ids)]" />
 -->            </search>
            <xpath expr="//group[1]">
                <filter string="Operating Unit" context="{'group_by': 'operating_unit_id'}"/>

            </xpath>
        </field>
    </record>

</odoo>
