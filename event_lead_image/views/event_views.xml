<odoo>
        <record model="ir.ui.view" id="view_event_form_inherit_image">
            <field name="name">event.event.form</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_title']" position="attributes">
                    <attribute name="style">float: left; width: 100%</attribute>
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="after">
                    <div class="oe_leadimage" style="float:left;">
                        <label for="lead_image" string="Lead Image" style="display: block;" />
                        <field name="lead_image" widget="image" />
                        <field name="lead_image_small" />
                    </div>
                </xpath>
            </field>
        </record>
</odoo>
